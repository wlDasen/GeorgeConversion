<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="?attr/colorPrimary"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/item_country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/item_country_name" />
    <TextView
        android:id="@+id/item_money_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/item_money_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#fff"
        android:textSize="15sp"
        android:paddingRight="10dp"
        android:layout_below="@+id/item_money_number" />
</RelativeLayout>