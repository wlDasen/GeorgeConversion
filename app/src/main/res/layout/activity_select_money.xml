<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:george="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="net.sunniwell.georgeconversion.SelectMoneyActivity">

    <net.sunniwell.georgeconversion.view.ClearEditText
        android:id="@+id/cet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="15sp"
        android:background="#fff100"
        android:hint="请输入关键字"
        android:drawableLeft="@drawable/search_bar_icon_normal"
        android:paddingLeft="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rclv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <net.sunniwell.georgeconversion.view.SliderView
            android:id="@+id/slider_view"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="#ff00ff"
            android:layout_gravity="right"
            george:letterSize="10sp"
            george:letterColor="#00ff00"/>
    </LinearLayout>
</LinearLayout>
